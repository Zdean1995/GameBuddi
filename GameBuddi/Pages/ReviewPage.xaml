<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GameBuddiAPI.Models"
             x:Class="GameBuddi.ReviewPage">

    <StackLayout>
        <ListView ItemsSource="{Binding ReviewComments}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Comment}" Detail="{Binding PostDate}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
